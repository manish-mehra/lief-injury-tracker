generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sql"
}


model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String?  @unique
  role      Int     @default(0) // user = 0; admin = 1
}

model InjuryReport {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  reporterName   String
  injuryDateTime DateTime
  reportDateTime DateTime
  bodyMap        String
  injuries       Injury[]
}

model Injury {
  id         Int          @id @default(autoincrement())
  reportId   Int
  label      String
  details    String
  encircleId String
  report     InjuryReport @relation(fields: [reportId], references: [id])
}